<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <div>
    <img 
      class="profile-avatar"
      src="<%= profile.avatar %>" 
      alt="<%= profile.name %>'s avatar"
    >
  </div>
    <h1><%= isSelf ? "Your" : profile.name %> Drinks!</h1>
    <% if (isSelf) { %>
      <% profile.drinks.forEach(drink =>{ %>
        <a href="/drinks/<%= drink._id %>"><%= drink.text %></a>
      <% }) %> 
    <% } else { %>
      <% profile.drinks.forEach(drink =>{ %>
        <a href="/drinks/<%= drink._id %>"><%= drink.text %></a>
      <% }) %> 
      <% } %>
</main>

<%- include('../partials/footer') %>