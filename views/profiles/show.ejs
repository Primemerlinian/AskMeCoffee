
<%- include('../partials/html-head') %> <%- include('../partials/nav') %>

<main>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@300&family=Montserrat:wght@200&family=Playfair+Display:ital@1&family=Poppins:ital,wght@1,100&display=swap"
    rel="stylesheet"
  />
  <div>
    <img
      class="profile-avatar"
      src="<%= profile.avatar %>"
      alt="<%= profile.name %>'s avatar"
    />
  </div>
  <h1><%= isSelf ? "Your" : profile.name %> Drinks!</h1>
  <% if (isSelf) { %> <% profile.drinks.forEach(drink =>{ %>
  <a href="/drinks/<%= drink._id %>"><%= drink.name %></a>
  <% }) %> <% } %>
</main>

<%- include('../partials/footer') %>