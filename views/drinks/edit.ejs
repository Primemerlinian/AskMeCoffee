<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<body class="bgimgselect">
<section>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@300&family=Montserrat:wght@200&family=Playfair+Display:ital@1&family=Poppins:ital,wght@1,100&display=swap" rel="stylesheet">
  <h1>Edit the Drink ✎</h1>
  <form action="/drinks/<%= drink._id %>?_method=PUT" method="POST">
    <label>
      Drink: 
      <input 
        type="text"
        name="name" 
        value="<%= drink.name %>" 
        autocomplete="off"
      >
    </label>
    <label>
      Sweetness Rating: 
      <input 
        type="text"
        name="sweetnessRating" 
        value="<%= drink.sweetnessRating %>" 
        autocomplete="off"
      >
      Drink Base: 
      <input 
        type="text"
        name="drinkBase" 
        value="<%= drink.drinkBase %>" 
        autocomplete="off"
      >
    </label>
    <label>
      Iced
      <input class="checkbox"
        type="checkbox" 
        name="Iced" 
				<%= drink.iced ? "checked" : "" %> 
      >
    </label>
    <button class="btn" type="submit">Edit the Drink ✎</button>
  </form>
</body>

<%- include('../partials/footer') %>