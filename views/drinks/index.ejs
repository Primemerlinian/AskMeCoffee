<%- include('../partials/html-head') %> <%- include('../partials/nav') %>
<body class="bgimgselect">
  <section class="adddrinkpage">
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@300&family=Montserrat:wght@200&family=Playfair+Display:ital@1&family=Poppins:ital,wght@1,100&display=swap"
      rel="stylesheet"
    />
    <h1>Drinks!</h1>
    <% if (user) { %>
    <h2>Add a Drink!</h2>
    <form action="/drinks" method="POST">
      <label>
        Drink:
        <input type="text" name="name" autocomplete="off" />
      </label>
      <label>
        Drink Base:
        <input type="text" name="drinkBase" autocomplete="off" />
      </label>
      <label>
        Sweetness Rating:
        <input type="number" name="sweetnessRating" autocomplete="off" />
      </label>
      <label>
        IcedðŸ§Š?:
        <input type="checkbox" name="iced" />
      </label>
      <button class="btn" type="submit">Add ðŸ¥¤</button>
    </form>
    <% } %>
    <h2>All the Drinks!</h2>
    <ul>
      <% drinks.forEach(drink => { %>
      <li>
        <a href="/drinks/<%= drink._id%>"><%= drink.name %></a>
        is <%= drink.iced ? 'iced' : 'hot'%>
      </li>
      <% }) %>
    </ul>
  </section>
</body>
